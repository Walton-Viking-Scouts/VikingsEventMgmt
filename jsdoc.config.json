{
  "source": {
    "include": ["./src/", "./README.md"],
    "includePattern": "\\.(js|jsx)$",
    "exclude": [
      "./src/**/*.test.js",
      "./src/**/*.test.jsx",
      "./src/**/*.test.ts",
      "./src/**/*.test.tsx",
      "./src/**/__tests__/",
      "./src/test/",
      "./node_modules/",
      "./cypress/",
      "./dist/",
      "./build/"
    ]
  },
  "opts": {
    "destination": "./docs/api/",
    "recurse": true
  },
  "plugins": [
    "plugins/markdown",
    "jsdoc-plugin-typescript"
  ],
  "typescript": {
    "moduleRoot": "./src/"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  }
}