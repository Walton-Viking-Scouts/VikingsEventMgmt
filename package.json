{
  "name": "vikings-eventmgmt-mobile",
  "private": true,
  "version": "1.4.4",
  "description": "Mobile React version of Vikings Event Management",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite --host --port 3001",
    "build": "vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "preview": "vite preview --port 3001",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:chrome": "cypress run --browser chrome",
    "cypress:run:firefox": "cypress run --browser firefox",
    "cypress:run:edge": "cypress run --browser edge",
    "cypress:cloud": "cypress run --record",
    "cypress:cloud:parallel": "cypress run --record --parallel",
    "cypress:cloud:chrome": "cypress run --record --browser chrome",
    "cypress:cloud:firefox": "cypress run --record --browser firefox",
    "cypress:cloud:parallel:chrome": "cypress run --record --parallel --browser chrome",
    "test:e2e": "start-server-and-test dev http://localhost:3001 cypress:run",
    "test:e2e:open": "start-server-and-test dev http://localhost:3001 cypress:open",
    "test:e2e:chrome": "start-server-and-test dev http://localhost:3001 cypress:run:chrome",
    "test:e2e:cloud": "start-server-and-test dev http://localhost:3001 cypress:cloud",
    "test:e2e:cloud:parallel": "start-server-and-test dev http://localhost:3001 cypress:cloud:parallel",
    "test:ci": "npm run test:run && npm run test:e2e:cloud",
    "test:all": "npm run test:run && npm run test:e2e",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release:create": "npx @sentry/cli releases new vikings-eventmgmt-mobile@$npm_package_version",
    "release:finalize": "npx @sentry/cli releases finalize vikings-eventmgmt-mobile@$npm_package_version",
    "release:deploy": "npx @sentry/cli releases deploys vikings-eventmgmt-mobile@$npm_package_version new -e production",
    "sentry:sourcemaps": "npx @sentry/cli sourcemaps inject ./dist && npx @sentry/cli sourcemaps upload --release vikings-eventmgmt-mobile@$npm_package_version ./dist",
    "build:release": "npm run build && npm run sentry:sourcemaps && npm run release:create && npm run release:finalize && npm run release:deploy"
  },
  "dependencies": {
    "@capacitor-community/sqlite": "^7.0.0",
    "@capacitor/cli": "^7.4.0",
    "@capacitor/core": "^7.4.0",
    "@capacitor/ios": "^7.4.0",
    "@capacitor/network": "^7.0.1",
    "@heroicons/react": "^2.2.0",
    "@sentry/react": "^9.32.0",
    "@sentry/vite-plugin": "^3.5.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.12",
    "jsdom": "^26.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "uuid": "^11.1.0",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "cypress": "^14.5.0",
    "eslint": "^9.29.0",
    "eslint-plugin-cypress": "^5.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jest-axe": "^10.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "start-server-and-test": "^2.0.12",
    "tailwindcss": "^4.1.11",
    "vite": "^7.0.0"
  }
}
